import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

import java.util.Arrays;
import java.util.List;

public class AmourJeuGUI extends Application {
    private List<String> questions = Arrays.asList(
        "Est-ce que tu m'aimes ?",
        "Es-tu heureux avec moi ?",
        "Penses-tu à moi souvent ?"
    );
    private int currentQuestion = 0;
    private int score = 0;

    @Override
    public void start(Stage primaryStage) {
        Label questionLabel = new Label(questions.get(currentQuestion));
        Button yesButton = new Button("Oui");
        Button noButton = new Button("Non");

        yesButton.setOnAction(e -> {
            score++;
            nextQuestion(questionLabel);
        });

        noButton.setOnAction(e -> nextQuestion(questionLabel));

        VBox vbox = new VBox(questionLabel, yesButton, noButton);
        Scene scene = new Scene(vbox, 300, 200);
        primaryStage.setScene(scene);
        primaryStage.setTitle("Jeu d'Amour");
        primaryStage.show();
    }

    private void nextQuestion(Label questionLabel) {
        currentQuestion++;
        if (currentQuestion < questions.size()) {
            questionLabel.setText(questions.get(currentQuestion));
        } else {
            questionLabel.setText("Merci d'avoir joué ! Vous avez répondu 'Oui' " + score + " fois.");
        }
    }

    public static void main(String[] args) {
        launch(args);
    }
}
